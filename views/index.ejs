<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Black Panther</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
  <link href="https://fonts.googleapis.com/css?family=Berkshire+Swash|Open+Sans" rel="stylesheet">
</head>
<body>
  <header>
    <ul>
      <li>Movies</li>
      <li>TV Shows</li>
      <li>Anime</li>
      <li>Music</li>
    </ul>
  </header>
  <section id="formArea">
    <h1>Black Panther</h1>


    <h3>Vote for your Favorite Quotes</h3>
    <ul class="messages">
    <% for(var i=0; i<messages.length; i++) {%>
      <li class="message">
        <span><%= messages[i].quote %></span>
        <span><%= messages[i].char %></span>
        <span><%= messages[i].thumbUp %></span>
        <span><%= messages[i].thumbDown %></span>
        <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
        <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </li>
    <% } %>
    </ul>

    <h3>Add a quote</h3>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="quote" name="quote">
      <input type="text" placeholder="character" name="char">
      <button type="submit">Submit</button>
    </form>

  </section>

<section id=picArea>
  <img src="blackpanther.jpg" alt="">
</section>

  <script src="main.js"></script>

</body>
</html>
